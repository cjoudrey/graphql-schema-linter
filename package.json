{
  "name": "graphql-schema-linter",
  "version": "2.0.1",
  "description": "Command line tool and package to validate GraphQL schemas against a set of rules.",
  "author": "Christian Joudrey",
  "main": "lib/index.js",
  "scripts": {
    "test": "mocha test/index.js",
    "prepare": "rm -rf lib/* && babel ./src --ignore test --out-dir ./lib"
  },
  "pkg": {
    "scripts": "lib/**/*.js"
  },
  "homepage": "https://github.com/cjoudrey/graphql-schema-linter",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/cjoudrey/graphql-schema-linter.git"
  },
  "devDependencies": {
    "@babel/cli": "^7.8.4",
    "@babel/core": "^7.9.0",
    "@babel/preset-env": "^7.9.5",
    "@babel/register": "^7.9.0",
    "husky": "4.3.0",
    "lint-staged": "10.5.3",
    "mocha": "8.2.1",
    "prettier": "2.2.1"
  },
  "babel": {
    "presets": [
      [
        "@babel/preset-env",
        {
          "targets": {
            "node": "9.4"
          }
        }
      ]
    ]
  },
  "license": "MIT",
  "dependencies": {
    "chalk": "^2.0.1",
    "columnify": "^1.5.4",
    "commander": "^8.0.0",
    "cosmiconfig": "^5.2.1",
    "glob": "^7.1.2",
    "graphql": "^15.0.0"
  },
  "bin": {
    "graphql-schema-linter": "lib/cli.js"
  },
  "lint-staged": {
    "*.{js,json}": [
      "prettier --write"
    ]
  },
  "prettier": {
    "singleQuote": true,
    "trailingComma": "es5"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  }
}
